<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.race"
		name="SNK - Neo Geo Pocket / Color (RACE)"
		version="2.16.0.11"
		provider-name="Judge_, Flavor, Akop Karapetyan, theelf, frangarcj, negativeExponent">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions>ngp|ngc|ngpc|npc</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">SNK - Neo Geo Pocket / Color (RACE) v2.16</summary>
		<description lang="en_GB">RACE is a Neo Geo Pocket (NGP) and Neo Geo Pocket Color (NGPC) emulator for multiple platforms.

Supported files: .ngp, .ngc, .ngpc, .npc</description>
		<license>GPLv2</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.race</source>
	</extension>
</addon>
